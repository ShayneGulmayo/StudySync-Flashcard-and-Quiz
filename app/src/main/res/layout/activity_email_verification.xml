<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmailVerificationActivity"
    android:background="@color/white">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="@id/consLayout"
            app:layout_constraintStart_toStartOf="@id/consLayout"
            app:layout_constraintEnd_toEndOf="@id/consLayout"
            app:layout_constraintBottom_toBottomOf="@id/consLayout"

            android:padding="20dp">
            <ImageView
                android:id="@+id/mailIcon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/mail"
                app:tint="@color/primary"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We have sent a verification link to your email. Check your Inbox or Spam folders."
                app:layout_constraintTop_toBottomOf="@id/mailIcon"
                android:textColor="@color/text_gray"
                android:textSize="16sp"
                android:layout_marginHorizontal="10dp"
                android:textAlignment="center"/>

            <Button
                android:id="@+id/procLogin"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:text="Proceed to Log in"
                android:textSize="20sp"
                android:textStyle="bold"
                android:drawableEnd="@drawable/right_arrow"
                android:drawableTint="@color/white"/>

            <TextView
                android:id="@+id/resendBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resend verification link"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/primary"
                android:layout_marginTop="10dp"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>