<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/messageContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="3dp"
    android:layout_marginRight="120dp">

    <ImageView
        android:id="@+id/senderImage"
        android:layout_width="36dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:layout_marginEnd="8dp"
        android:contentDescription="Sender Photo"
        android:scaleType="centerCrop"
        android:src="@drawable/user_profile" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/senderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"/>

        <LinearLayout
            android:id="@+id/fileLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_message_other_user"
            android:padding="12dp"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:weightSum="4">

            <ImageView
                android:id="@+id/fileIcon"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:src="@drawable/attach_file"
                android:contentDescription="File Icon"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/fileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="example.pdf"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/fileDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PDF Â· 120 KB"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp"
                    android:ellipsize="end"
                    android:maxLines="1"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/saveFileButton"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/download"
                android:contentDescription="Save File"
                android:clickable="true"
                android:focusable="true"
                android:layout_weight="1"/>
        </LinearLayout>

        <TextView
            android:id="@+id/timestampText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="8dp"
            android:text="12:00 PM"
            android:textColor="@color/text_gray"
            android:textSize="12sp"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>
