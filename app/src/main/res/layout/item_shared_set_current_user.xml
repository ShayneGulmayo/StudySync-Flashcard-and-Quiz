<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:orientation="horizontal"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/sharedCardLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_message_current_user"
                android:padding="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/sharedTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Study Guide: Chemistry"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/sharedType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flashcard Set"
                    android:textColor="@color/light_gray"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:id="@+id/sharedDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 cards | Created by username"
                    android:textColor="@color/light_gray"
                    android:textSize="12sp"
                    android:layout_marginTop="1dp"/>

                <TextView
                    android:id="@+id/sharedBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shared by username"
                    android:textColor="@color/light_gray"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/timestampText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00 PM"
                android:textColor="@color/text_gray"
                android:textSize="10sp"
                android:layout_gravity="right"/>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
